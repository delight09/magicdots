client.unfocused #333333 #333333 #888888 #333333
client.urgent #d6ff00 #d6ff00 #ffffff #d6ff00

# Selfish
mode "MARK" {
                bindsym F1 mark m1
                bindsym F2 mark m2
                bindsym F3 mark m3
                bindsym F4 mark m4
                bindsym F5 mark m5
                bindsym F6 mark m6

                bindsym Return mode "default"
                bindsym Escape mode "default"
}

mode "GOTO" {
                bindsym F1 [con_mark="m1"] focus
                bindsym F2 [con_mark="m2"] focus
                bindsym F3 [con_mark="m3"] focus
                bindsym F4 [con_mark="m4"] focus
                bindsym F5 [con_mark="m5"] focus
                bindsym F6 [con_mark="m6"] focus
                                                                                           
                bindsym Return mode "default"
                bindsym Escape mode "default"
}
bindsym $mod+Shift+g mode "GOTO"
bindsym $mod+Shift+m mode "MARK"

